<h1>Order <%= @order.id %></h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.product.title %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.price) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>Total Price: <%= number_to_currency(@order.total_price) %></p>

<% if @order.order_status == 0 %>
  <p>Status: Pending</p>
  <%= button_to "Cancel Order", order_path(@order), method: :delete, data: { confirm: "Are you sure you want to cancel this order?" } %>
<% else %>
  <p>Status: Delivered</p>
<% end %>

