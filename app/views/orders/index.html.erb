<h1>My Orders</h1>

<table>
  <thead>
    <tr>
      <th>Total Price</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= number_to_currency(order.total_price) %></td>
        <td>
          <% if order.order_status == 0 %>
            Pending
          <% elsif order.order_status == 3 %>
            Delivered
          <% elsif order.order_status == 4 %>
            Cancelled
          <% end %>
        </td>
        <td>
          <% if order.order_status == 0 %>
            <%= link_to 'View', order_path(order) %> |
            <%= link_to 'Edit', edit_order_path(order) %> |
            <%= button_to 'Cancel', cancel_order_path(order), method: :patch, onclick: "return confirm('Are you sure you want to cancel your order?');" %>
          <% elsif order.order_status == 3 %>
            <%= link_to 'View', order_path(order) %> |
            <%= button_to 'Return', cancel_order_path(order), method: :patch, onclick: "return confirm('Are you sure you want to return your order?');" %>
          <% elsif order.order_status == 4 %>
            Your Order has been cancelled
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
