<h1>My Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order Number</th>
      <th>Total Price</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= number_to_currency(order.total_price) %></td>
        <td><%= order.order_status == 0 ? "Pending" : "Delivered" %></td>
        <td><%= link_to 'View', order_path(order) %> | <%= link_to 'Edit', edit_order_path(order) %> | <%= button_to 'delete', order_path(order), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

