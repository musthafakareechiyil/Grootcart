
<div class="container">
    <div class="row">
        <div class="col d-flex justify-content-center">
        </div>
    </div>
</div>

<div class="container py-5 text-center ">
      <div class="row d-flex justify-content-center">
        <div class="row">
        <div class="col d-flex justify-content-center">
            
        </div>
    </div>
<div class="col-lg-4 col-md-6 col-sm-12 ">
<div class="login_wrap widget-taber-content p-30 background-white border-radius-10 mb-md-5 mb-lg-0 mb-sm-5">
  <div class="padding_eight_all bg-white text-center ">
    <div class="heading_s1">
      <% if flash[:alert] %>
        <p class="text-danger"><%= flash[:alert] %></p>
      <% end %>
      <h3 class="mb-30">Login</h3>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :phone_number, class: "form-label" %>
        <%= f.text_field :phone_number, class: "form-control", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="login_footer form-group">
          <div class="chek-form">
            <div class="custome-checkbox">
              <%= f.check_box :remember_me, class: "form-check-input", id: "exampleCheckbox1", value: "" %>
              <%= f.label :remember_me, class: "form-check-label", for: "exampleCheckbox1" do %>
                <span>Remember me</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.submit "Login", class: "btn btn-fill-out btn-block hover-up" %>
      </div>
    <% end %>
    <p>Don't have an account? <%= link_to "Signup!", new_registration_path(resource_name) %></p>
    <p><%= link_to "Forgot password?", new_password_path(resource_name), class: "text-muted" %></p>
  </div>
</div>
</div>



